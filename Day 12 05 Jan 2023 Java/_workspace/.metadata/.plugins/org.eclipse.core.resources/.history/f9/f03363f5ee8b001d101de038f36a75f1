package com.revature.service;

import com.revature.model.Car;

public class CarService {

	// do member variables
	// in real world we have many member variables

	public Car buildCar() {
		Car creta = new Car("Creta 2023", "White", "Automatic", 2800000L);
		return creta;
	}

	public void getCarDetails(Car car) {
		System.out.println("-------Car Details-------");
		System.out.println("\t\t 1.Manufacturer:" + Car.getManufacturer());
		System.out.println("\t\t 2.Name of Car:" + car.getCarName());
		System.out.println("\t\t 3.Color of Car:" + car.getCarColor());
		System.out.println("\t\t 1.Features of Car:" + car.getCarFeatures());
		System.out.println("\t\t 1.Price of Car:" + car.getPrice());
	}
}
